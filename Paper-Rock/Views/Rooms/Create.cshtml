@model Paper_Rock.Models.Room

@{
    ViewBag.Title = "Create";
   
    
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Room</h4>
        <hr />       
         @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <label class="text-danger">         @ViewBag.Message     </label>

            <div class="form-group">
            @Html.LabelFor(model => model.Value, "Value", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Value, htmlAttributes: new { @class = "form-control", @type= "number" })
                @Html.ValidationMessageFor(model=>model.Value, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Player1Res, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Player1Res, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Player1Res, "", new { @class = "text-danger" })
            </div>
        </div>

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
